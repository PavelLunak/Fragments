<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8D7E7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/label_e"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etMessageForActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Vzkaz pro aktivitu"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSendToActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etMessageForActivity"
            android:layout_centerHorizontal="true"
            android:text="Odeslat do aktivity" />

        <EditText
            android:id="@+id/etMessageForFragmentD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSendToActivity"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Vzkaz pro fragment D"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSendToFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etMessageForFragmentD"
            android:layout_centerHorizontal="true"
            android:text="Odeslat do fragmentu D" />

        <Button
            android:id="@+id/btnShowDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSendToFragment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Zobrazit dialog jako dialog" />

        <Button
            android:id="@+id/btnShowDialog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnShowDialog"
            android:layout_centerHorizontal="true"
            android:text="Zobrazit dialog jako fragment" />

        <TextView
            android:id="@+id/labelMyFruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnShowDialog2"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="24sp" />

    </RelativeLayout>

</ScrollView>